@using INTRANET.Models
@model  HrCvVM

@{
    ViewBag.Title = Model.EmployeeName + " - Fill CV";
}

<div class="container">

    <h2>@ViewBag.Title</h2>

    <div class="row">
        <div class="col-lg-12">
            <div>
                @using (Html.BeginForm("FillCV", "HrCv", new { employeeId = Model.EmployeeId, language = Model.Language }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.HiddenFor(m => m.EmployeeId)
                    @Html.HiddenFor(m => m.Language)
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="active"><a href="#general" data-toggle="tab">General</a></li>
                        <li><a href="#personal" data-toggle="tab">Personal details</a></li>
                        <li><a href="#additional" data-toggle="tab">Additional details</a></li>
                        <li><a href="#labor" data-toggle="tab">Labor history</a></li>
                        <li><a href="#family" data-toggle="tab">Relatives</a></li>
                    </ul>
                    <!-- Tab panels -->
                    <div class="tab-content">

                        <div role="tabpanel" class="tab-pane active" id="general">
                            <br />

                            @Html.HiddenFor(m => m.EmployeeId)
                            @Html.HiddenFor(m => m.Language)


                            <div class="col-md-3">
                                <label for="photo">Photo:</label>
                                <div class="form-group">
                                    @if (Model.HasImage)
                                    {
                                        <img width="100%" src="@String.Format("data:image/gif;base64,{0}", Model.ImageContent)" />
                                    }
                                    else
                                    {
                                        <img width="100%" src="~/Content/HrCvImages/no-image.PNG" />
                                    }
                                </div>
                                <div class="form-group">
                                    <input type="file" accept="image/*" class="custom-file-input" id="fileItem" name="fileItem">
                                </div>
                            </div>
                            <div class="col-md-9">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="department">Department:</label>
                                        <input readonly type='text' class="form-control" value="@Model.DepartmentName" />
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="position">Position:</label>
                                        <input readonly type='text' class="form-control" value="@Model.PositionName" />
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="startPositionDate">Start date:</label>
                                        <input readonly type='text' class="form-control" value="@Model.EntryDate.ToShortDateString()" />
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="phone">Phone:</label>
                                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "error" })
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="phone">Phone external:</label>
                                        @Html.TextBoxFor(m => m.ExternalPhone, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.ExternalPhone, "", new { @class = "error" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="btn-group pull-right">
                                    <div class="pull-right">
                                        <span class="btn btn-primary btn-next">Next</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div role="tabpanel" class="tab-pane" id="personal">
                            <br />

                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="DateOfBirth">Date of Birth:</label>
                                    <input readonly type='text' class="form-control" value="@Model.DateOfBirth.ToShortDateString()" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="Nationality">Nationality:</label>
                                    @Html.TextBoxFor(m => m.Nationality, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Nationality, "", new { @class = "error" })
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="PlaceOfBirth">Place of Birth:</label>
                                    @Html.TextBoxFor(m => m.PlaceOfBirth, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.PlaceOfBirth, "", new { @class = "error" })
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="PartyMembership">Party Membership:</label>
                                    @Html.TextBoxFor(m => m.PartyMembership, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.PartyMembership, "", new { @class = "error" })
                                </div>
                            </div>


                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="AcademicDegree">Academic Degree:</label>
                                    @Html.TextBoxFor(m => m.AcademicDegree, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.AcademicDegree, "", new { @class = "error" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="AcademicTitle">Academic Title:</label>
                                    @Html.TextBoxFor(m => m.AcademicTitle, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.AcademicTitle, "", new { @class = "error" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="EducationDegree">Education Degree:</label>
                                    @Html.TextBoxFor(m => m.EducationDegree, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.EducationDegree, "", new { @class = "error" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="EducationSpeciality">Education Speciality:</label>
                                    @Html.TextBoxFor(m => m.EducationSpeciality, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.EducationSpeciality, "", new { @class = "error" })
                                </div>
                            </div>


                            <div class="col-md-12">
                                <div class="form-group">
                                    <b>Education History:</b>

                                </div>
                            </div>
                            <div class="col-md-12" data-bind='foreach: educations'>
                                <!--for labels and hint messages, need this row for alignemnt of controls-->
                                <div class="row">
                                    <div class="col-md-9">
                                        <div class="form-group">

                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">

                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-9">
                                        <div class="form-group">
                                            <input class="form-control" data-bind="value: Name, attr: {name: 'EducationList[' + $index() + ']'}" />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <a href="#" data-bind="click: $root.removeEducation" class="btn btn-warning">Remove</a>
                                            <a href="#" data-bind="click: $root.addEducation" class="btn btn-success">Add</a>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="col-md-12 btn-container">
                                <div class="btn-group">
                                    <span class="btn btn-warning btn-previous">Previous</span>
                                </div>
                                <div class="btn-group pull-right">
                                    <div class="pull-right">
                                        <span class="btn btn-primary btn-next">Next</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div role="tabpanel" class="tab-pane" id="additional">
                            <br />
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="Languages">Languages:</label>
                                    <div class='input-group'>
                                        @Html.TextBoxFor(m => m.Languages, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Languages, "", new { @class = "error" })
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Awards: </label>
                                </div>
                            </div>
                            <div class="col-md-12" data-bind='foreach: awards'>
                                <div class="row">
                                    <div class="col-md-9">
                                        <div class="form-group">

                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">

                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-9">
                                        <div class="form-group">
                                            <input class="form-control" data-bind="value: Name, attr: {name: 'AwardList[' + $index() + ']'}" />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <a href="#" data-bind="click: $root.removeAward" class="btn btn-warning">Remove</a>
                                            <a href="#" data-bind="click: $root.addAward" class="btn btn-success">Add</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Memberships: </label>
                                </div>
                            </div>
                            <div class="col-md-12" data-bind='foreach: memberships'>
                                <div class="row">
                                    <div class="col-md-9">
                                        <div class="form-group">

                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">

                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-9">
                                        <div class="form-group">
                                            <input class="form-control" data-bind="value: Name, attr: {name: 'MembershipList[' + $index() + ']'}" />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <a href="#" data-bind="click: $root.removeMembership" class="btn btn-warning">Remove</a>
                                            <a href="#" data-bind="click: $root.addMembership" class="btn btn-success">Add</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 btn-container">
                                <div class="btn-group">
                                    <span class="btn btn-warning btn-previous">Previous</span>
                                </div>
                                <div class="btn-group pull-right">
                                    <div class="pull-right">
                                        <span class="btn btn-primary btn-next">Next</span>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div role="tabpanel" class="tab-pane" id="labor">
                            <br />

                            <div class="col-md-12" data-bind='foreach: laborDetails'>
                                <!--for labels and hint messages, need this row for alignemnt of controls-->
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label>Years: </label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Description: </label>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label>&nbsp;</label>
                                        </div>
                                    </div>
                                </div>
