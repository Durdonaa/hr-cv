                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section styles {
    <link href="~/Content/hrFillCv.css" rel="stylesheet" runat="server" />
}

@section scripts {
    <script type='text/javascript' src='~/Scripts/knockout-min.js'></script>

    <script type="text/javascript">
        $('.btn-next').click(function () {
            $('.nav-tabs > .active').next('li').find('a').trigger('click');
        });

        $('.btn-previous').click(function () {
            $('.nav-tabs > .active').prev('li').find('a').trigger('click');
        });
    </script>
    <script type="text/javascript">
        $(function () {
            $('#fileItem').change(function () {
                var filename = $(this).val();
                var filePath = $.trim(filename);
                if (filePath == "") {
                    alert("Please browse a file to upload");
                    return;
                }

                var $ext = filePath.split(".").pop().toLowerCase();
                var $allow = new Array("png", "jpg");
                if ($.inArray($ext, $allow) == -1) {
                    alert("Only image files (.png, .jpg) are accepted, please browse a image file");
                    return;
                }
            })
        });
    </script>

    <script type="text/javascript">
        //to handle observable string array
        var item = function (text) {
            var self = this;
            self.Name = ko.observable(text);
        };
        //use ths model for the whole page
        //to add logic for labor, relatives, etc:
        //1. add those to arguments of constructor
        //2. create methods for add and delete
        //3. do not forget about HTML markup
        var CvModel = function (educations, laborDetails, relatives, awards, memberships) {

            var self = this;
            self.educations = ko.observableArray(educations);
            self.laborDetails = ko.observableArray(laborDetails);
            self.relatives = ko.observableArray(relatives);
            self.awards=ko.observableArray(awards);
            self.memberships=ko.observableArray(memberships);

            self.addEducation = function () {
                self.educations.push(new item(""));
            };

            self.removeEducation = function (education) {
                self.educations.remove(education);
                //add default empty row
                if (self.educations().length == 0)
                    self.addEducation();
            };
            self.addLaborDetail = function () {
                self.laborDetails.push({
                    Years: "",
                    Description: ""
                });
            }
            self.removeLaborDetail = function (labor) {
                self.laborDetails.remove(labor);
                //add default empty row
                if (self.laborDetails().length == 0)
                    self.addLaborDetail();
            }
            self.addRelative=function(){
                self.relatives.push({
                    Degree:"",
                    FullName:"",
                    BirthDateAndPlace:"",
                    LaborDetails:"",
                    Address:""
                });
            }

            self.removeRelative=function(relative){
                self.relatives.remove(relative);
                //add default empty row
                if (self.relatives().length == 0)
                    self.addRelative();
            }

            self.addAward=function(){
                self.awards.push(new item(""));
            }

            self.removeAward=function(award){
                self.awards.remove(award);
                if (self.awards().length == 0)
                    self.addAward();
            }

            self.addMembership=function(){
                self.memberships.push(new item(""));
            }

            self.removeMembership=function(membership){
                self.memberships.remove(membership);
                if(self.memberships.length==0)
                    self.addMembership();
            }
        };

        var viewModel = new CvModel(@Html.Raw(Json.Encode(Model.EducationList.Select(e=> new {Name = e }))),
            @Html.Raw(Json.Encode(Model.LaborDetailList.Select(e=> new { Years = e.Years, Description= e.Description}))),
            @Html.Raw(Json.Encode(Model.RelativesDetailsList.Select(e=> new { Degree = e.Degree, FullName= e.Degree, BirthDateAndPlace=e.BirthDateAndPlace, LaborDetails=e.LaborDetails, Address=e.Address}))),
            @Html.Raw(Json.Encode(Model.AwardList.Select(e=> new {Name = e }))),
            @Html.Raw(Json.Encode(Model.MembershipList.Select(e=> new {Name = e }))));
        ko.applyBindings(viewModel);

    </script>

}
